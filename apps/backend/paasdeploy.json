{
  "$schema": "../../paasdeploy.schema.json",
  "name": "paasdeploy-api",
  "build": {
    "type": "dockerfile",
    "dockerfile": "./Dockerfile",
    "context": "."
  },
  "healthcheck": {
    "path": "/health",
    "interval": "30s",
    "timeout": "10s",
    "retries": 3,
    "startPeriod": "30s"
  },
  "port": 8080,
  "env": {
    "APP_ENV": "production",
    "LOG_LEVEL": "info"
  },
  "resources": {
    "memory": "256m",
    "cpu": "0.5"
  }
}
