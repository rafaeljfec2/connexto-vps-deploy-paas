{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Frontend: Dev",
      "type": "shell",
      "command": "pnpm dev",
      "options": {
        "cwd": "${workspaceFolder}/apps/frontend"
      },
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE",
          "endsPattern": "ready in"
        }
      }
    },
    {
      "label": "Frontend: Lint",
      "type": "shell",
      "command": "pnpm lint",
      "options": {
        "cwd": "${workspaceFolder}/apps/frontend"
      },
      "group": "test",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Frontend: Lint Fix",
      "type": "shell",
      "command": "pnpm lint --fix",
      "options": {
        "cwd": "${workspaceFolder}/apps/frontend"
      },
      "group": "test",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Frontend: Format",
      "type": "shell",
      "command": "pnpm format",
      "options": {
        "cwd": "${workspaceFolder}/apps/frontend"
      },
      "group": "build"
    },
    {
      "label": "Frontend: Type Check",
      "type": "shell",
      "command": "pnpm typecheck",
      "options": {
        "cwd": "${workspaceFolder}/apps/frontend"
      },
      "group": "test",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Frontend: Build",
      "type": "shell",
      "command": "pnpm build",
      "options": {
        "cwd": "${workspaceFolder}/apps/frontend"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Backend: Dev",
      "type": "shell",
      "command": "go run cmd/api/main.go",
      "options": {
        "cwd": "${workspaceFolder}/apps/backend"
      },
      "group": "build",
      "isBackground": true
    },
    {
      "label": "Backend: Build",
      "type": "shell",
      "command": "AGENT_VER=$(cat ../../AGENT_VERSION | tr -d '\\n') && go build -ldflags \"-X github.com/paasdeploy/backend/internal/handler.LatestAgentVersion=${AGENT_VER}\" -o bin/api ./cmd/api",
      "options": {
        "cwd": "${workspaceFolder}/apps/backend"
      },
      "group": "build",
      "problemMatcher": ["$go"]
    },
    {
      "label": "Backend: Test",
      "type": "shell",
      "command": "go test ./...",
      "options": {
        "cwd": "${workspaceFolder}/apps/backend"
      },
      "group": "test",
      "problemMatcher": ["$go"]
    },
    {
      "label": "Docker: Up",
      "type": "shell",
      "command": "docker compose up -d",
      "options": {
        "cwd": "${workspaceFolder}/deploy"
      },
      "group": "build"
    },
    {
      "label": "Docker: Down",
      "type": "shell",
      "command": "docker compose down",
      "options": {
        "cwd": "${workspaceFolder}/deploy"
      },
      "group": "build"
    },
    {
      "label": "Install Dependencies",
      "type": "shell",
      "command": "pnpm install",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build"
    }
  ]
}
