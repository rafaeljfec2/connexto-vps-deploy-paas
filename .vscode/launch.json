{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Frontend: Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/apps/frontend/src",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/*"
      }
    },
    {
      "name": "Frontend: Edge",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/apps/frontend/src",
      "sourceMaps": true
    },
    {
      "name": "Backend: Go",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/apps/backend/cmd/api",
      "cwd": "${workspaceFolder}/apps/backend",
      "env": {
        "PORT": "8080",
        "LOG_LEVEL": "debug"
      },
      "envFile": "${workspaceFolder}/apps/backend/.env"
    },
    {
      "name": "Backend: Debug Test",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${file}",
      "cwd": "${workspaceFolder}/apps/backend"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack",
      "configurations": ["Backend: Go", "Frontend: Chrome"],
      "stopAll": true
    }
  ]
}
