{
  "name": "paasdeploy",
  "version": "0.1.0",
  "private": true,
  "description": "A lightweight, self-hosted PaaS for automatic deployments",
  "scripts": {
    "prepare": "husky",
    "dev": "turbo run dev --filter=@paasdeploy/backend & sleep 3 && turbo run dev --filter=@paasdeploy/frontend",
    "dev:parallel": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:frontend": "pnpm --filter @paasdeploy/frontend run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "backend:dev": "cd apps/backend && air",
    "backend:build": "cd apps/backend && go build -o bin/api cmd/api/main.go",
    "backend:test": "cd apps/backend && go test ./...",
    "docker:up": "docker compose -f deploy/docker-compose.yml up -d",
    "docker:down": "docker compose -f deploy/docker-compose.yml down",
    "docker:logs": "docker compose -f deploy/docker-compose.yml logs -f",
    "docker:build": "docker compose -f deploy/docker-compose.yml build",
    "clean": "turbo run clean && rm -rf node_modules",
    "typecheck:frontend": "pnpm --filter @paasdeploy/frontend run typecheck",
    "lint:go": "cd apps/backend && bash scripts/lint-go.sh",
    "lint:go-quick": "cd apps/backend && (golangci-lint run --fast --timeout=2m ./... 2>/dev/null || ./bin/golangci-lint run --fast --timeout=2m ./...)",
    "precommit:local": "pnpm -w lint-staged && pnpm run lint:go-quick && pnpm run typecheck:frontend"
  },
  "lint-staged": {
    "apps/frontend/**/*.{ts,tsx}": [
      "pnpm --filter @paasdeploy/frontend run lint:fix",
      "pnpm --filter @paasdeploy/frontend run format:check"
    ],
    "apps/frontend/**/*.css": [
      "pnpm --filter @paasdeploy/frontend run format:check"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.8.3"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
