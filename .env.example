# PaaSDeploy Environment Configuration
# Copy this file to .env and adjust values for your environment

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgres://paasdeploy:paasdeploy@localhost:5432/paasdeploy?sslmode=disable

# =============================================================================
# Backend API
# =============================================================================
PORT=8080
HOST=0.0.0.0
LOG_LEVEL=info

# =============================================================================
# Deploy Engine
# =============================================================================
# Directory where application repositories are cloned
DEPLOY_DATA_DIR=/data/apps

# Number of concurrent deploy workers
DEPLOY_WORKERS=2

# Default timeout for deploy operations (in seconds)
DEPLOY_TIMEOUT=600

# Health check timeout (in seconds)
HEALTH_CHECK_TIMEOUT=60

# Health check retry interval (in seconds)
HEALTH_CHECK_INTERVAL=5

# Health check retry attempts
HEALTH_CHECK_RETRIES=3

# =============================================================================
# Docker
# =============================================================================
DOCKER_HOST=unix:///var/run/docker.sock

# Docker registry for built images (optional)
# DOCKER_REGISTRY=registry.example.com

# =============================================================================
# Frontend
# =============================================================================
VITE_API_URL=http://localhost:8080
VITE_SSE_URL=http://localhost:8080/events/deploys

# =============================================================================
# Traefik (Production)
# =============================================================================
# Domain for the PaaSDeploy dashboard
# TRAEFIK_DOMAIN=deploy.example.com

# =============================================================================
# GitHub (Future)
# =============================================================================
# GITHUB_WEBHOOK_SECRET=your-webhook-secret
# GITHUB_APP_ID=your-app-id
# GITHUB_PRIVATE_KEY_PATH=/path/to/private-key.pem
